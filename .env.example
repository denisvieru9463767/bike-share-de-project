# =============================================================================
# NYC Bike Share Data Engineering Pipeline - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Airflow Configuration
# -----------------------------------------------------------------------------
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# -----------------------------------------------------------------------------
# Airflow Metadata Database (PostgreSQL)
# -----------------------------------------------------------------------------
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow
AIRFLOW_POSTGRES_DB=airflow

# -----------------------------------------------------------------------------
# Staging Database (PostgreSQL)
# -----------------------------------------------------------------------------
STAGING_POSTGRES_USER=capstone_user
STAGING_POSTGRES_PASSWORD=capstone_password
STAGING_POSTGRES_DB=staging_data

# -----------------------------------------------------------------------------
# ClickHouse Analytics Database
# -----------------------------------------------------------------------------
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=bike_user
CLICKHOUSE_PASSWORD=bike_password
CLICKHOUSE_DATABASE=bike_share_db

# -----------------------------------------------------------------------------
# Superset (if using the superset/ docker-compose)
# -----------------------------------------------------------------------------
SUPERSET_POSTGRES_USER=superset
SUPERSET_POSTGRES_PASSWORD=superset
SUPERSET_SECRET_KEY=CHANGE_ME_TO_A_RANDOM_SECRET_KEY
# Get your Mapbox API key at https://www.mapbox.com/
MAPBOX_API_KEY=your_mapbox_api_key_here
